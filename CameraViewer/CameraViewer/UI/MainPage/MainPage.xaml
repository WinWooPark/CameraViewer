<UserControl
    x:Class="CameraViewer.UI.MainPage.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ImageView="clr-namespace:CameraViewer.UI.MainPage.ImageView"
    xmlns:ImageWatch="clr-namespace:ImageWatch;assembly=ImageWatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CameraViewer.UI.MainPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="855"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <Border CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="960" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5,5,5,5" x:Name="ImageView1">
                <ImageWatch:ImageWatch DataContext="{Binding ImageWatchAPI1}"/>
            </Grid>
            <Grid Grid.Column="1" Margin="5,5,5,5" x:Name="ImageView2">
                <ImageWatch:ImageWatch DataContext="{Binding ImageWatchAPI2}"/>
            </Grid>


        </Grid>
    </Border>

</UserControl>
