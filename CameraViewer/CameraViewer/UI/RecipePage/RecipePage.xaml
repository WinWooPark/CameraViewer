<UserControl
    x:Class="CameraViewer.UI.RecipePage.RecipePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RecipeTeaching="clr-namespace:CameraViewer.UI.RecipePage.RecipeTeaching"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CameraViewer.UI.RecipePage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="855"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="RecipeView"
            Grid.Column="0"
            Margin="5,5,5,5" />

        <Grid Grid.Column="1">
            <RecipeTeaching:RecipeTeaching />
        </Grid>


    </Grid>
</UserControl>
